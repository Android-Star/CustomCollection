<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.example.yzs.customcollection.views.seekBar.ChengyuSeekBar
      android:layout_width="match_parent"
      android:id="@+id/seekbar"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_height="wrap_content"
      />

  <Button
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/btnLess"
      android:id="@+id/btnAdd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="加"
      />
  <Button
      android:id="@+id/btnLess"
      app:layout_constraintLeft_toRightOf="@id/btnAdd"
      android:layout_width="wrap_content"
      app:layout_constraintRight_toLeftOf="@id/btnComplete"
      android:layout_height="wrap_content"
      android:text="减"
      />
  <Button
      android:id="@+id/btnComplete"
      app:layout_constraintLeft_toRightOf="@id/btnLess"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      android:text="完成"
      />

</android.support.constraint.ConstraintLayout>