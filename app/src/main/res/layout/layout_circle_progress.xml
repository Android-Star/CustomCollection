<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <Button
      android:id="@+id/btnStart"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="开始"
      />
  <RelativeLayout
      android:id="@+id/rl_wave"
      app:layout_constraintTop_toBottomOf="@id/btnStart"
      android:layout_width="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="20dp"
      android:layout_height="wrap_content"
      >
    <com.example.yzs.customcollection.views.progressView.WaveProgressView
        android:id="@+id/waveView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:wave_color="@color/colorAccent"
        />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:text="15.00%"
        />
  </RelativeLayout>

  <com.example.yzs.customcollection.views.progressView.CircleProgressView
      android:id="@+id/cpv"
      app:layout_constraintTop_toBottomOf="@id/rl_wave"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="20dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:textSize="18sp"
      app:arcWidth="10dp"
      app:radius="50dp"
      app:arcColor="@color/colorAccent"
      app:textColor="@android:color/black"
      />

  <com.example.yzs.customcollection.views.progressView.GradientCircleProgressView
      android:id="@+id/gcpv"
      app:layout_constraintTop_toBottomOf="@id/cpv"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="20dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:textSize1="18sp"
      app:arcWidth1="10dp"
      app:radius1="50dp"
      app:arcColor1="@color/colorAccent"
      app:textColor1="@android:color/black"
      />

</android.support.constraint.ConstraintLayout>